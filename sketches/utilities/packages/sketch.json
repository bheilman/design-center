{
    manifest:
    {
        "main.cf": {desc: "main file" },
        "README.md": {documentation: true},
        "test.cf": {comment: "Test Policy"},
        "params/demo.json": {comment: "Demo of service control."}
    },

    metadata:
    {
        name: "Packages::Generic",
	    description: "Control packages in a generic way",
        version: "1.0.0",
        license: "MIT",
        tags: ["cfdc"],
        authors: ["Ben Heilman <bheilman@enova.com>" ],
        depends: {"CFEngine::stdlib": {version: 109}, "CFEngine::dclib": { version: "1.0.0" }, cfengine: {version: "3.4.0"}, os: ["linux"] },
        arguments: [ "package", "version", "release" ]
    },

    api:
    {
        install:
        [
            { type: "environment", name: "runenv", },
            { type: "metadata", name: "metadata", },

            { type: "string", name: "package", description: "package to install"},
            { type: "string", name: "version", default: null, description: "minimum version of the package required"},
            { type: "string", name: "release", default: null, description: "repository label to install from"},

            { type: "return", name: "packages_verified", },
        ],
    },

    namespace: "cfdc_packages",
    interface: ["main.cf"]
}
